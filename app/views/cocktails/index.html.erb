<div class="container">

<h1> Cocktails </h1>

</div>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col col-lg-4 mb-3">
        <div class="card">
          <%= link_to "#{cocktail.name}", cocktail_path(cocktail.id) %>
        </div>

      </div>
    <% end %>
  </div>
</div>

<p> <%= link_to "Create a new cocktail", new_cocktail_path, class: "btn btn-primary"%> </p>
