

<div> <%= render 'menu' %> </div>

<div class="coc-container h1">

<p>
  <span id="banner-typed-text"></span>
</p>

<p id=""> <%= link_to "Create a new cocktail", new_cocktail_path, class: "button-home"%> </p>

</div>

<div class="row justify-content-around vw-100 mb-5">


    <% @cocktails.each do |cocktail| %>
<div class="col col-lg-4 mb-3 justify-content-center">
    <div class="card" style="width: 18rem;">
      <% if cocktail.photo.attached? %>
      <img class="card-img-top" src="<%= cl_image_path(cocktail.photo.key, :width => 100, :height => 150, :crop => :fill) %>" alt="Card image cap">
      <% else %>
      <img class="card-img-top" src="https://img.cuisineaz.com/660x660/2019-06-11/i147555-cocktail-pasteque-vodka.jpeg" alt="Card image cap">
      <% end %>


      <div class="card-body">
        <h5 class="card-title"> <span class="card-a"> <%= cocktail.name %></span></h5>
        <p class="card-text"> <%= cocktail.description %> </p>
        <div class="button-card">
        <%= link_to "Drink it >", cocktail_path(cocktail.id), class: "drink-it" %>
        <%= link_to cocktail_path(cocktail.id), method: :delete, data: { confirm: "Are you sure?" } do %>
        <i class="fas fa-trash"></i>
      <% end %>
      </div>
      </div>
    </div>
</div>
    <% end %>

</div>



